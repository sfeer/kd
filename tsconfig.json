{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    // 将每个文件作为单独模块，默认false
    "isolatedModules": true,
    "esModuleInterop": true,
    // 允许编译javascript文件，默认false
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["packages/**/*.ts", "packages/**/*.vue", "src/**/*.ts", "src/**/*.vue", "typings/**/*.d.ts"],
  "exclude": ["node_modules"]
}
